sudo apt update
sudo apt install -y qemu-guest-agent initramfs-tools

sudo systemctl enable qemu-guest-agent

sudo tee -a /etc/initramfs-tools/modules <<'EOF'
virtio
virtio_blk
virtio_scsi
virtio_pci
virtio_net
EOF

sudo update-initramfs -u -k all

sudo grub-install
sudo update-grub        # Debian/Ubuntu

grep -E ' / ' /etc/fstab
